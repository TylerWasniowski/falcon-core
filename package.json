{
  "name": "falcon-core",
  "version": "0.0.1-5",
  "description": "The cross-database ORM that powers falcon",
  "main": "lib/index.js",
  "author": "The Falcon Team",
  "scripts": {
    "build": "cross-env NODE_ENV=production rm -rf lib && babel -d lib/ src/ --source-maps",
    "flow": "flow",
    "flow-typed": "flow-typed install",
    "lint": "eslint --cache --format=node_modules/eslint-formatter-pretty .",
    "prepublish": "npm run build",
    "test": "cross-env NODE_ENV=test jest",
    "coverage": "npm run test:sqlite -- --coverage",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "test:mysql": "cross-env NODE_ENV=test DB_CLIENTS=mysql jest test/db.spec.js",
    "test:sqlite": "cross-env NODE_ENV=test DB_CLIENTS=sqlite jest test/db.spec.js",
    "test:sqlserver": "cross-env NODE_ENV=test DB_CLIENTS=sqlserver jest test/db.spec.js",
    "test:postgresql": "cross-env NODE_ENV=test DB_CLIENTS=postgresql jest test/db.spec.js",
    "test:cassandra": "cross-env NODE_ENV=test DB_CLIENTS=cassandra jest test/db.spec.js",
    "test-all": "npm run lint && npm run flow && npm run test && npm run build",
    "watch": "cross-env NODE_ENV=development babel --out-dir lib src --source-maps --watch"
  },
  "keywords": [
    "falcon",
    "api",
    "sql",
    "mysql",
    "postgres",
    "sqlite",
    "sqlite3"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/falcon-client/falcon-core"
  },
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=6",
    "npm": ">=3"
  },
  "dependencies": {
    "cassandra-driver": "^3.2.2",
    "debug": "^2.6.8",
    "mssql": "^4.0.4",
    "mysql": "^2.13.0",
    "pg": "git+https://github.com/maxcnunes/node-postgres.git#multiple-statements-v6.1.0",
    "portfinder": "^1.0.13",
    "sql-query-identifier": "^1.1.0",
    "sqlite3": "^3.1.8",
    "ssh2": "^0.5.5",
    "uuid": "^3.0.1",
    "valida": "^2.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-flow-runtime": "^0.11.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.0",
    "dotenv": "^4.0.0",
    "eslint": "^3.19.0",
    "eslint-config-bliss": "^1.0.8",
    "eslint-formatter-pretty": "^1.1.0",
    "flow-bin": "^0.47.0",
    "flow-runtime": "^0.12.0",
    "flow-typed": "^2.1.2",
    "jest-cli": "^20.0.4",
    "sinon": "^2.3.2"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/db/provider_clients/Sqlite*.js"
    ]
  }
}
